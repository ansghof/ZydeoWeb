{
  "dependencies": {
    "Microsoft.NETCore.App": {
      "version": "1.0.0",
      "type": "platform"
    },
    "Microsoft.AspNetCore.Diagnostics": "1.0.0",
    "Microsoft.AspNetCore.Mvc": "1.0.0",
    "Microsoft.AspNetCore.Razor.Tools": {
      "version": "1.0.0-preview2-final",
      "type": "build"
    },
    "Microsoft.AspNetCore.Server.Kestrel": "1.0.0",
    "Microsoft.AspNetCore.StaticFiles": "1.0.0",
    "Microsoft.AspNet.WebApi.Client": "5.2.3",
    "System.Runtime.Serialization.Xml": "4.1.1",
    "Microsoft.Extensions.Configuration.EnvironmentVariables": "1.0.0",
    "Microsoft.Extensions.Configuration.Json": "1.0.0",
    "Microsoft.Extensions.Logging": "1.0.0",
    "Microsoft.Extensions.Logging.Console": "1.0.0",
    "Microsoft.Extensions.Logging.Debug": "1.0.0",
    "Microsoft.Extensions.Options.ConfigurationExtensions": "1.0.0",
    "Microsoft.VisualStudio.Web.BrowserLink.Loader": "14.0.0",
    "MySql.Data": "7.0.6-IR31",
    //"MySql.Data.Core": "7.0.4-IR-191",
    "Serilog": "2.2.1",
    "Serilog.Sinks.RollingFile": "3.0.0",
    "Serilog.Extensions.Logging": "1.2.0",
    "MailKit": "1.8.1",
    "ZD.Common": "1.0.0-*",
    "ZD.LangUtils": "1.0.0-*",
    "Countries": "1.0.0-*"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": [
        "dotnet5.6",
        "portable-net45+win8"
      ]
    }
  },

  "buildOptions": {
    "emitEntryPoint": true,
    "preserveCompilationContext": true,
    "embed": [
      "Logic/DB.Scripts.txt",
      "files/other/std-pinyin.txt",
      "files/other/syllabary-pinyin.txt",
      "files/other/export-prologue.txt",
      "files/other/chd-trg-stops.txt"
    ]
  },

  "scripts": {
    //"postpublish": "%project:Directory%/../targz-chsite.cmd"
  },

  "runtimeOptions": {
    "configProperties": {
      "System.GC.Server": true
    }
  },

  "publishOptions": {
    "include": [
      "appsettings.json",
      "Index.cshtml",
      "wwwroot",
      "files/html",
      "files/strings"
    ],
    "exclude": [
      "wwwroot/dev*",
      "wwwroot/lib"
    ]
  }
}
